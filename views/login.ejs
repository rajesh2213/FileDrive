<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Drive | Login</title>
</head>
<body>
    <header><%- include('./partials/header')  %></header>
    <main>
        <h2>Sign-In</h2>
        <% if (authErrors && authErrors.length) { %>
            <% authErrors.forEach(function(error) { %>
                <div class="alert alert-danger" style="color:red;"><%= error %></div>
            <% }); %>
        <% } %>
        <% if (errors && errors.length) { %>
            <% errors.forEach(function(error) { %>
                <div class="alert alert-danger" style="color:red;"><%= error.msg %></div>
            <% }); %>
        <% } %>
        <form action="/login" method="POST">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="" placeholder="jett03@gmail.com">
            <label for="password">Password</label>
            <input type="password" id="password" name="password">
            <button type="submit">Submit</button>
        </form>
    </main>
</body>
</html>